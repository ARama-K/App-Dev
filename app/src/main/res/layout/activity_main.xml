<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4B0BF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="31dp"
        android:text="@string/greet"
        android:textColor="#CBDCCD"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="331dp"
        android:layout_height="61dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="106dp"
        android:fontFamily="casual"
        android:text="@string/intent_intro"
        android:textAlignment="textStart"
        android:textColor="#715D3F"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/dialbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/dialbutton"
        android:layout_width="168dp"
        android:layout_height="63dp"
        android:layout_marginBottom="53dp"
        android:text="@string/dial"
        app:layout_constraintBottom_toTopOf="@+id/alarmbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <!-- this color is defined in my apps colors.xml
    android:textColor="@color/mycolor"
-->
    <!--these colors are defined in android os
    android:textColor="@android:color/holo_blue_light"-->
    <!--
 dp = density independent pixels
-->
    <Button
        android:id="@+id/alarmbutton"
        android:layout_width="132dp"
        android:layout_height="70dp"
        android:layout_marginBottom="186dp"
        android:text="@string/alarm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialbutton" />

    <!--
        sp = scale independent pixels
    -->
</androidx.constraintlayout.widget.ConstraintLayout>